# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=8015

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# Được sử dụng bởi ứng dụng để connect và docker-compose để config container
DB_HOST=localhost
DB_PORT=5483
DB_USERNAME=polymarket
DB_PASSWORD=polymarket123
DB_DATABASE=polymarket_db

# ============================================
# Redis Configuration
# ============================================
# Được sử dụng bởi ứng dụng để connect và docker-compose để config container
REDIS_HOST=localhost
REDIS_PORT=6430

# ============================================
# ClickHouse Configuration
# ============================================
# Được sử dụng bởi ứng dụng để connect và docker-compose để config container
CLICKHOUSE_HOST=http://localhost:8174
CLICKHOUSE_USER=polymarket
CLICKHOUSE_PASSWORD=polymarket123
CLICKHOUSE_DATABASE=polymarket_db

# ============================================
# Polymarket Wallet & API Credentials
# ============================================
# Private key (hex, with or without 0x prefix)
PRIVATE_KEY=
# Proxy address (Gnosis Safe)
PROXY_ADDRESS=
# Polygon RPC endpoint
POLYGON_RPC=https://polygon-rpc.com
# CLOB API endpoint
CLOB_URL=https://clob.polymarket.com
# Polymarket L2 API credentials (from developer dashboard)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# ============================================
# Engine & Executor Mode (Rust / JS)
# ============================================
# Signal engine: "rust" = Rust engine, "js" = JS engine (default)
ENGINE_MODE=js
# Execution path: "rust" = Rust executor, "js" = JS executor (default)
# Note: EXECUTOR_MODE=rust requires ENGINE_MODE=rust
EXECUTOR_MODE=js

# ============================================
# Arbitrage Engine Parameters
# ============================================
# Minimum profit in basis points to emit signal
ARB_MIN_PROFIT_BPS=5
# Minimum absolute profit ($) to emit signal
ARB_MIN_PROFIT_ABS=0
# Cooldown between executions (ms)
ARB_COOLDOWN_MS=5000

# ============================================
# Real Trading Configuration
# ============================================
# Enable/disable real trading at startup
REAL_TRADING_ENABLED=false
# Default order size in USDC
REAL_TRADE_SIZE=10
# Enable slippage adjustment (add/subtract spread for fill)
SLIPPAGE_ENABLED=false
# Minimum PnL% threshold to execute trade
REAL_TRADING_MIN_PNL_PERCENT=1

# ============================================
# Telegram Notifications
# ============================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
